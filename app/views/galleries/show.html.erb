<div class="row">
  <h1>Gallery</h1>

  <input type="hidden" id="galleryID" value="<%= @gallery.id %>">

  <p>
    <b>Name: </b>
    <%= @gallery.name %>
  </p>

  <p>
    <b>Description: </b>
    <%= @gallery.description %>
  </p>
 
  <p>
    <b>Number of Bathrooms: </b>
    <%= @gallery.no_of_bathrooms %>
  </p>
  
   <p>
    <b>Building method: </b>
    <%= @gallery.building_method %>
  </p>

   <p>
    <b>Series: </b>
    <%= @gallery.series %>
  </p>


   <p>
    <b>Sq.feet: </b>
    <%= @gallery.sft %>
  </p>


   <p>
    <b>Number of Bedrooms: </b>
    <%= @gallery.no_of_bedrooms %>
  </p>

  <p>
    <b>Name: </b>
    <%= @gallery.name %>
  </p>


  <p>
    <b>Other Details: </b>
    <%= @gallery.other %>
  </p>




  <div class="form-actions">
    <%= link_to 'Back', galleries_path, :class => 'btn btn-mini'  %>
    <%= link_to 'Edit gallery', edit_gallery_path(@gallery), :class => 'btn btn-mini' %>
    <%= link_to 'Delete gallery', gallery_path(@gallery), :method => 'delete', :confirm => 'Are you sure?', :class => 'btn btn-mini' %>
  </div>

<h2>Pictures</h2>
</div>
 

<div class="row">
  <ul class="thumbnails files">
<% unless @singlewide_pictures.empty? %>
  <% @singlewide_pictures.each do |pic| %>
    <li class="span3" id="singlewide_picture_<%= pic.id %>">
    <div class="thumbnail">
      <%= image_tag pic.image.url %>
      <div class="caption">
        <p style="text-align: center;">
        <%= link_to "Edit picture", singlewide_picture_path(pic) %>

        <%=
          link_to "Delete picture", pic,
            :data => { :confirm => "Are you sure?" },
            :method => :delete
          %>

        </p>
      </div>
    </div>
    </li>
  <% end %>
<% end %>
</ul>
</div>



