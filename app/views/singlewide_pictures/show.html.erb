<%- model_class = @gallery.class -%>

<%- model_class = @singlewide_picture.class -%>
<div class="page-header">
  <h1><%=t '.title', :default => model_class.model_name.human %></h1>
</div>

<dl class="dl-horizontal">
  <dt><strong><%= model_class.human_attribute_name(:description) %>:</strong></dt>
  <dd><%= @singlewide_picture.description %></dd>
  <dt><strong><%= model_class.human_attribute_name(:image) %>:</strong></dt>
  <dd><%= @singlewide_picture.image %></dd>
  <dt><strong><%= model_class.human_attribute_name(:gallery_id) %>:</strong></dt>
  <dd><%= @singlewide_picture.gallery_id %></dd>
</dl>



<%= image_tag @singlewide_picture.image.url %>
<div class="form-actions">
  <%= link_to t('.back', :default => t("helpers.links.back")),
              gallery_path(@singlewide_picture.gallery_id), :class => 'btn'  %>
  <%= link_to t('.edit', :default => t("helpers.links.edit")),
              edit_singlewide_picture_path(@singlewide_picture), :class => 'btn' %>
  <%= link_to t('.destroy', :default => t("helpers.links.destroy")),
              singlewide_picture_path(@singlewide_picture),
              :method => 'delete',
              :confirm => t('.confirm', :default => t("helpers.links.confirm", :default => 'Are you sure?')),
              :class => 'btn btn-danger' %>
</div>

